<link rel="stylesheet" href="/css/user.css">
<section class="page user-page flex">
    <div class="user-box">
        <div class="user-header flex">
            <div class="user-header-username">
                <h2>{{currentUser.username}}</h2>
            </div>
        </div>
        <div class="user-main flex">
            <div class="user-main-visited flex">
                <h3><i class="fas fa-star"></i> Visited</h3>
                <div class="user-search">
                    {{> searchBar}}
                </div>
                <ul id="user-visited-list">
                    {{#each user.visited}}
                    <li class="visited-item" id="user-list-visited"><a href="/country/{{this.codeName}}">{{this.name}}</a></li>
                    {{/each}}
                </ul>
            </div>
            <div class="user-main-wishlist flex">
                <h3><i class="fas fa-heart"></i> Wishlist</h3>
                <div class="user-search">
                    {{> searchBar}}
                </div>
                <ul id="user-wishlist">
                    {{#each user.wishlist}}
                    <li class="wishlist-item" id="user-list-wishlist"><a href="/country/{{this.codeName}}">{{this.name}}</a></li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="tips-box">
        <div class="tips-nav flex">
        {{> tipsList}}
        </div>
        <div class="tips-list">
            {{#unless tips}}
                <p>Nothing here yet. You can fix that in no time !</p>
            {{/unless}}
            {{#each tips}}
            <hr>
            <article id="{{this._id}}" class="tip-container">
                <h3>{{this.name}}</h3><p>({{this.category}})</p>
                <span class="tip-location">{{this.city}}, {{this.country.name}}</span>
                <p class="tip-body">{{this.body}}</p>
                <span class="tip-address">{{this.address}}</span>
                <span class="tip-user">{{this.user.username}}</span><button data-tip-id="{{this._id}}" class="btn-delete-tip">X</button>
            </article>
            {{/each}}
        </div>
    </div>
</section>